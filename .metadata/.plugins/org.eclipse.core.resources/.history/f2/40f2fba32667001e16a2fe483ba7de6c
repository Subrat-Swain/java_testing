package com.anvsystems.javademo;

import java.util.Scanner;

public class SwitchCaseDemo {
	public static void main(String[] args) {
		
		/**\
		 * switch(<CONDITION>){
		 * CASE 1;
		 * ...
		 * 	break;
		 * 
		 * case 2;
		 * ...
		 * break;
		 * }
		 */
		int option;
		Scanner sc = new Scanner(System.in);
		System.out.println("---------------------------------");
		System.out.println("Enter option from below menu");
		System.out.println("Encrypt a String");
		System.out.println("Decrypt a String");
		option = Integer.parseInt(sc.nextLine());
		switch(option) {
		case 1:
			System.out.println("Encrypting string");
			break;
			
		case 2:
			System.out.println("Decrypting string");
			break;
			
		default:
			System.out.println("Secret Message");
			
		}
	}
}
